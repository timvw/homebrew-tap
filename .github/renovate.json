{
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "homebrew",
        "custom.regex"
      ],
      "addLabels": [
        "renovate",
        "homebrew"
      ],
      "prPriority": 10,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "Formula/qv.rb",
        "Formula/bose.rb"
      ],
      "matchDatasources": [
        "github-tags",
        "github-releases"
      ],
      "addLabels": [
        "renovate",
        "homebrew"
      ],
      "prPriority": 10,
      "minimumReleaseAge": null
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Formula/qv\\.rb$"
      ],
      "matchStrings": [
        "url \"https://github\\.com/timvw/qv/releases/download/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/qv-(?:aarch64|x86_64)-apple-darwin\\.tar\\.gz\"\\s*\\n\\s*sha256 \"(?<currentDigest>[a-f0-9]{64})\""
      ],
      "datasourceTemplate": "github-release-attachments",
      "packageNameTemplate": "timvw/qv"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Formula/bose\\.rb$"
      ],
      "matchStrings": [
        "url \"https://github\\.com/timvw/bose/releases/download/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/bose-v\\d+\\.\\d+\\.\\d+-apple-darwin-universal\\.tar\\.gz\"\\s*\\n\\s*sha256 \"(?<currentDigest>[a-f0-9]{64})\""
      ],
      "datasourceTemplate": "github-release-attachments",
      "packageNameTemplate": "timvw/bose"
    }
  ]
}
