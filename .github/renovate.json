{
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "Formula/qv.rb",
        "Formula/bose.rb"
      ],
      "matchDatasources": [
        "github-tags",
        "github-releases"
      ],
      "addLabels": [
        "renovate",
        "homebrew"
      ],
      "prPriority": 10,
      "minimumReleaseAge": null
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Formula/qv\\.rb/"
      ],
      "matchStrings": [
        "url \"https://github\\.com/timvw/qv/(?:releases/download|archive/refs/tags)/v?(?<currentValue>\\d+\\.\\d+\\.\\d+)[^\"]*\"",
        "root_url \"https://github\\.com/timvw/homebrew-tap/releases/download/qv-(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "timvw/qv"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Formula/bose\\.rb/"
      ],
      "matchStrings": [
        "url \"https://github\\.com/timvw/bose/releases/download/v?(?<currentValue>\\d+\\.\\d+\\.\\d+)/[^\"]+\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "timvw/bose"
    }
  ]
}
